{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["../src/*"],
      "tdesign-react-native/*": ["../src/*"],
      "tdesign-icons-react-native/*": ["../../tdesign-icons/packages/react-native"]
    }
  },
  "exclude": [
    "node_modules",
    "node_modules/**/*"
  ],
  "include": [
    "index.js",
    "src/**/*",
    "*.js",
    "*.esm",
    "*.mjs",
    "scripts/**/*",
    "jest.config.ts"
  ]
}
